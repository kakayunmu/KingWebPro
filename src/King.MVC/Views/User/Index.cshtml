@section styles{
    <link href="~/lib/select2/dist/css/select2.css" rel="stylesheet" />
    <link href="/Views/User/Index.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">部门管理</h3>
            </div>
            <div class="box-body">
                <div id="treeDiv" class="portlet-body">
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">用户列表</h3>
                <div class="pull-right box-tools">
                    <button id="btnAdd" title="" class="btn btn-primary btn-sm" type="button" data-original-title="新增功能" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-circle"></i>&nbsp;&nbsp;新增
                    </button>
                    <button id="btnEdit" title="" class="btn btn-primary btn-sm" type="button" data-original-title="编辑功能" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-pencil"></i>&nbsp;&nbsp;编辑
                    </button>
                    <button id="btnDelete" title="" class="btn btn-danger btn-sm" type="button" data-original-title="删除功能" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;删除
                    </button>
                    <button id="btnUpdatePwd" title="" class="btn btn-primary btn-sm" type="button" data-original-title="修改密码" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-pencil"></i>&nbsp;&nbsp;修改密码
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table id="tb_data"></table>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Edit")
@Html.Partial("_ResetPwd")
@section scripts{
    <script type="text/javascript" src="~/lib/select2/dist/js/select2.min.js"></script>
    <script src="~/Views/User/Index.js?ts=@DateTime.Now.Ticks"></script>
}